{
  "name": "creator-single",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '&gt; 5%, ie 10' -r public/app.css",
    "build:all": "npm run build:css && npm run build:js",
    "build:css": "npm run clean-css && npm run autoprefixer",
    "build:js": "npm run uglify",
    "clean-css": "cleancss -o public/app.css src/app.css",
    "serve": "browser-sync start --server --files 'index.html' 'src/app.css, src/app.js'",
    "start": "parallelshell 'npm run serve' 'npm run watch:css' 'npm run watch:js'",
    "uglify": "uglifyjs src/app.js -m -o public/app.js",
    "watch:css": "onchange 'src/app.css' -- npm run build:css",
    "watch:js": "onchange 'src/app.js' -- npm run build:js"
  },
  "author": "Drew Barontini",
  "license": "ISC",
  "dependencies": {
    "browser-sync": "^2.18.8",
    "clean-css": "^4.0.9",
    "clean-css-cli": "^4.0.9",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "uglify-js": "^2.8.14"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "postcss-cli": "^3.0.0"
  }
}
